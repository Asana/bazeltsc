{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "target",
        "types": ["node", "long"],
        "allowJs": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true
    },
    "include": [
        "src/**.ts",
        "src/**.js"
    ]
}
